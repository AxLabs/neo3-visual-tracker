{
  "name": "neo3-visual-tracker",
  "publisher": "ngd-seattle",
  "displayName": "Neo 3 Visual DevTracker",
  "description": "A Neo Express blockchain explorer that is directly available within Visual Studio Code",
  "version": "0.0.1",
  "icon": "resources/neo-logo.png",
  "galleryBanner": {
    "color": "#242424",
    "theme": "dark"
  },
  "author": "Neo Global Development Seattle",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "bugs": {
    "url": "https://github.com/ngdseattle/neo3-visual-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ngdseattle/neo3-visual-tracker.git"
  },
  "activationEvents": [
    "onView:neo3-visual-devtracker.blockchainsExplorer",
    "onCommand:neo3-visual-tracker.helloWorld",
    "onCommand:neo3-visual-tracker.nxp3.create",
    "onCommand:neo3-visual-tracker.nxp3.run"
  ],
  "keywords": [
    "Neo",
    "Blockchain"
  ],
  "main": "./dist/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "neo3-visual-tracker.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "neo3-visual-tracker.nxp3.create",
        "title": "Create neo-express instance",
        "category": "Neo Express 3"
      },
      {
        "command": "neo3-visual-tracker.nxp3.run",
        "title": "Run neo-express instance",
        "category": "Neo Express 3",
        "icon": {
          "light": "resources/light/play.svg",
          "dark": "resources/dark/play.svg"
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "neo3-visual-tracker.nxp3.run",
          "when": "view == neo3-visual-devtracker.blockchainsExplorer",
          "group": "inline"
        },
        {
          "command": "neo3-visual-tracker.nxp3.run",
          "when": "view == neo3-visual-devtracker.blockchainsExplorer"
        }
      ],
      "view/title": [
        {
          "command": "neo3-visual-tracker.nxp3.create",
          "when": "view == neo3-visual-devtracker.blockchainsExplorer"
        }
      ]
    },
    "views": {
      "neo3-visual-devtracker-mainView": [
        {
          "id": "neo3-visual-devtracker.blockchainsExplorer",
          "name": "Blockchains"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neo3-visual-devtracker-mainView",
          "title": "Neo",
          "icon": "resources/neo-logo.png"
        }
      ]
    }
  },
  "scripts": {
    "bundle-nxp3": "npm run bundle-nxp3-download && npm run bundle-nxp3-extract",
    "bundle-nxp3-download": "mkdir -p nxp3 && nwget https://github.com/neo-project/neo-express/releases/download/1.2.20-insiders/Neo.Express3.1.2.20-insiders.nupkg -O nxp3/nxp3.nupkg",
    "bundle-nxp3-extract": "cd nxp3 && extract-zip nxp3.nupkg && mv tools/netcoreapp* tools/netcoreapp",
    "compile": "npm run compile-ext && npm run compile-panel",
    "compile-ext": "webpack --config src/extension/webpack.config.js --mode development",
    "compile-panel": "webpack --config src/panel/webpack.config.js --mode development",
    "compile-prod": "npm run compile-prod-ext && npm run compile-prod-panel",
    "compile-prod-ext": "webpack --config src/extension/webpack.config.js --mode production",
    "compile-prod-panel": "webpack --config src/panel/webpack.config.js --mode production",
    "package": "npm run compile-prod && npm run bundle-nxp3 && vsce package",
    "setversion": "gulp setversion",
    "watch": "concurrently -r npm:watch-*",
    "watch-ext": "webpack --config src/extension/webpack.config.js --mode development --watch --info-verbosity verbose",
    "watch-panel": "webpack --config src/panel/webpack.config.js --mode development --watch --info-verbosity verbose"
  },
  "devDependencies": {
    "@cityofzion/neon-core": "^4.8.0",
    "@cityofzion/neon-js": "^5.0.0-next.3",
    "@types/glob": "^7.1.1",
    "@types/gulp": "^4.0.6",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/shell-escape": "^0.2.0",
    "@types/vscode": "^1.46.0",
    "concurrently": "^5.2.0",
    "extract-zip": "^2.0.1",
    "file-loader": "^6.0.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "nerdbank-gitversioning": "^3.2.7-beta",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "vsce": "^1.77.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "wget-improved": "^3.2.1"
  },
  "dependencies": {}
}
